

<div class="branding">
	<%= image_tag("skull-white.png", :class => "logo") %>
	<label class="title">Dinosaur Search</label>
</div>

<div class="content">

	

	  <%= form_tag(dinosaurs_path, :method => 'get', :id => "dinosaur_search", :autocomplete => :off )do %>

	  	<div class="upper-toolbar">
        	<%= text_field_tag :search, params[:search], class: 'search_bar' %>
      	</div>

      	<%= image_tag("ajax-loader.gif", id: "loading-gif", style: "display:none;") %>
	    <!--<%= submit_tag "Search" %>-->

		<div id="dinosaurs">
		  <%= render 'dinosaurs' %>
		</div>
	  <% end %>
	

	
</div>



<script type="text/javascript">
	$(document).ready(function() {
	  $(window).keydown(function(event){
	    if(event.keyCode == 13) {
	      event.preventDefault();
	      return false;
	    }
	  });
	});
</script>