<div class="branding">
  <%= link_to("/", :controller => "dinosaurs_controller", :action => "index") do %>
    <%= image_tag("skull-white.png", :class => "logo") %>
    <label class="title">Dinosaur Search</label>
  <% end %>
</div>

<div class="content">

    <h1><%= @dinosaur.name %></h1>
    <div id="left">
      <div class="wrapper">
      <%= image_tag(@dinosaur.image_url, alt: @dinosaur.name)%>
      </div>
    </div>
    <div id="right">
      <div id="wrapper">
        <p>
          Era: <span><%= @dinosaur.era %></span><br>
          Diet: <span><%= @dinosaur.diet%></span><br>
          Order: <span><%= @dinosaur.taxonomic_order%></span><br>
          Length: <span><%= @dinosaur.length%></span><br>
          Location: <span><%= @dinosaur.location%></span><br>
        </p>
      </div>
    <br>
    
    </div>
    <br>
    <h3 class="bottom-header">Description</h3>
    <div class="bottom">
      <p>
        <%= @dinosaur.description %>
      </p>
    </div>

    <p id="notice"><%= notice %></p>
  
</div>













